# Environment Configuration Template
# Copy this to .env and configure for your environment

# =============================================================================
# SECURITY SETTINGS (REQUIRED IN PRODUCTION)
# =============================================================================

# Generate a secure secret key:
# python3 -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secure-secret-key-here-CHANGE-THIS

# Environment: development, staging, production
ENVIRONMENT=development

# =============================================================================
# CORS SETTINGS
# =============================================================================

# Allowed origins (comma-separated)
# Development: *
# Production: https://yourdomain.com,https://app.yourdomain.com
ALLOWED_ORIGINS=*

# =============================================================================
# TRUSTED HOSTS (Production only)
# =============================================================================

# Comma-separated list of trusted hostnames
TRUSTED_HOSTS=localhost,127.0.0.1

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

# SQLite (default for development)
DATABASE_URL=sqlite:///./college_attendance.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://user:password@localhost/dbname

# =============================================================================
# JWT TOKEN SETTINGS
# =============================================================================

# Token expiration in minutes (default: 60)
ACCESS_TOKEN_EXPIRE_MINUTES=60

# =============================================================================
# RATE LIMITING
# =============================================================================

# Login attempts per minute (default: 5)
LOGIN_RATE_LIMIT=5

# API requests per minute (default: 100)
API_RATE_LIMIT=100

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Server host
HOST=0.0.0.0

# Server port
PORT=8000

# Reload on code changes (development only)
RELOAD=true

# =============================================================================
# PRODUCTION CHECKLIST
# =============================================================================

# Before deploying to production, ensure:
# ✓ SECRET_KEY is set to a secure random value
# ✓ ENVIRONMENT is set to "production"
# ✓ ALLOWED_ORIGINS is restricted to your domains
# ✓ DATABASE_URL points to PostgreSQL
# ✓ HTTPS/TLS is configured at reverse proxy level
# ✓ TRUSTED_HOSTS is configured
# ✓ Regular backups are configured
# ✓ Monitoring and logging are set up
